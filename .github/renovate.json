{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices",
        "customManagers:dockerfileVersions",
        "customManagers:githubActionsVersions",
        "customManagers:makefileVersions",
        "customManagers:biomeVersions",
        ":automergeDigest",
        ":automergeLinters",
        "replacements:all",
        "security:openssf-scorecard",
        "workarounds:all",
        "group:monorepos"
    ],
    "labels": [
        "dependencies",
        "no-stale"
    ],
    "semanticCommits": "enabled",
    "commitMessagePrefix": "⬆️",
    "configMigration": true,
    "rebaseWhen": "behind-base-branch",
    "dependencyDashboard": true,
    "separateMultipleMajor": true,
    "major": {
        "dependencyDashboardApproval": true
    },
    "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
    ],
    "dependencyDashboardAutoclose": true,
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/package\\.json$/"
            ],
            "matchStrings": [
                "\"packageManager\":\\s+\"(?<depName>.+)@(?<currentValue>[^\\s]+)\""
            ],
            "autoReplaceStringTemplate": "\"packageManager\": \"{{{depName}}}@{{{newValue}}}\"",
            "datasourceTemplate": "npm"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/\\.go$/",
                "/Makefile/"
            ],
            "matchStrings": [
                "go\\s+run\\s+(?<depName>.+)@(?<currentValue>[^\\s]+)"
            ],
            "autoReplaceStringTemplate": "go run {{{depName}}}@{{{newValue}}}",
            "datasourceTemplate": "go"
        }
    ],
    "packageRules": [
        {
            "packageNames": [
                "github.com/dianlight/srat"
            ],
            "enabled": false
        },
        {
            "commitMessageTopic": "{{groupName}} {{depName}}",
            "groupName": "BackEnd",
            "matchFileNames": [
                "backend/**"
            ]
        },
        {
            "commitMessageTopic": "{{groupName}} {{depName}}",
            "groupName": "FrontEnd",
            "matchFileNames": [
                "frontend/**"
            ]
        },
        {
            "commitMessageTopic": "{{groupName}} {{depName}}",
            "groupName": "CI/CD",
            "matchFileNames": [
                ".guthub/workflows/**"
            ]
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true
        }
    ]
}