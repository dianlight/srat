{
	"compilerOptions": {
		// https://github.com/home-assistant/frontend/blob/dev/tsconfig.json
		// Language Options
		"target": "ES2021",
		"lib": [
			"ES2021",
			"DOM",
			"DOM.Iterable",
			"WebWorker"
		],
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		// Modules
		"module": "ESNext",
		// "moduleResolution": "node",
		"resolveJsonModule": true,
		"moduleDetection": "force",
		// Babel handles transpiling and no need for declaration files
		"noEmit": true,
		// Caching
		"incremental": true,
		"tsBuildInfoFile": "node_modules/.cache/typescript/.tsbuildinfo",
		// Type checking options
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"strict": true,
		"noImplicitAny": false,
		// Interop with CommonJS and other tools
		"esModuleInterop": true,
		"isolatedModules": true,
		// Other ( not form HA)				
		"jsx": "react-jsx",
		"allowJs": true,
		// Bundler mode (not from HA)
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"allowArbitraryExtensions": true,
		"verbatimModuleSyntax": true,
		// Best practices (not from HA)
		"skipLibCheck": true,
		// "noUncheckedIndexedAccess": true,
		// "noImplicitOverride": true,
		// "noPropertyAccessFromIndexSignature": false,
		// Prevent implicit inclusion of Node.js types
		"types": []
	},
	"exclude": [
		"node_modules",
		"out",
		"tmp",
		"vendor",
		".git",
		"dist"
	]
}