{
  "servers": {
    "mui-mcp": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "-y",
        "@mui/mcp@latest"
      ]
    },
    "awesome-copilot": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "ghcr.io/microsoft/mcp-dotnet-samples/awesome-copilot:latest"
      ]
    },
    "gopls-mcp": {
      "type": "sse",
      "url": "http://localhost:8092",
    },
    "chrome-devtools": {
      "command": "bunx",
      "args": [
        "chrome-devtools-mcp@latest"
      ]
    },
    "sqlite": {
      "command": "bunx",
      "args": [
        "-y",
        "@executeautomation/database-server",
        "/mnt/remote/config.db3"
      ]
    },
    "bun": {
      "command": "bunx",
      "args": [
        "-y",
        "mcp-bun@latest"
      ],
      "env": {
        "DISABLE_NOTIFICATIONS": "true"
      }
    },
    "act-testing": {
      "command": "bunx",
      "args": [
        "act-testing-mcp"
      ],
      "env": {
        "PROJECT_ROOT": "/workspaces/srat",
      }
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "vale-mcp": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "-y",
        "@iflow-mcp/chrischinchilla-vale-mcp"
      ]
    },
  }
}