{
    "conventionalCommits.scopes": [
      "api",
      "gh_actions",
      "monorepo",
      "webapp",
      "http_server",
      "samba",
      "docker",
      "sensors"
    ],
    "makefile.configureOnOpen": false,
    "better-comments.highlightPlainText": true,
    "commitSage.commit.commitFormat": "emoji",
    "commitSage.commit.onlyStagedChanges": true,
    "commitSage.commit.promptForRefs": true,
    "commitSage.gemini.model": "gemini-2.0-flash-exp",
    "geminicodeassist.updateChannel": "Default",
    "geminicodeassist.beta.enableGeneratedCodeDocumentationView": true,
    "geminicodeassist.codeGenerationPaneViewEnabled": true,
    "remote.localPortHost": "allInterfaces"
}